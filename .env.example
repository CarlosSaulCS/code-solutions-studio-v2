# Database
# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL) - Uncomment and configure for production
# DATABASE_URL="postgresql://username:password@localhost:5432/codesolutions"
# Alternative cloud providers:
# DATABASE_URL="postgresql://username:password@host:5432/codesolutions?sslmode=require" # For services like Heroku, Railway, etc.
# DATABASE_URL="postgres://username:password@host:5432/codesolutions" # Alternative format

# NextAuth.js
# Development
NEXTAUTH_URL="http://localhost:3000"
# Production - Update with your domain
# NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Resend Email Service
RESEND_API_KEY="re_..."
# Admin email for notifications
ADMIN_EMAIL="admin@codesolutionstudio.com.mx"

# Stripe Payments
# Development keys (test mode)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Production keys (live mode) - Uncomment for production
# STRIPE_PUBLIC_KEY="pk_live_..."
# STRIPE_SECRET_KEY="sk_live_..."
# STRIPE_WEBHOOK_SECRET="whsec_..." # Get from Stripe dashboard for your webhook endpoint
# STRIPE_WEBHOOK_URL="https://yourdomain.com/api/payments/webhook"

# Google Calendar Integration (Optional)
# For admin calendar management
ADMIN_CALENDAR_ACCESS_TOKEN="ya29...."
ADMIN_CALENDAR_REFRESH_TOKEN="1//..."

# File Upload Configuration
MAX_FILE_SIZE="10485760"  # 10MB in bytes
UPLOAD_DIR="./uploads"

# Rate Limiting Configuration
RATE_LIMIT_MAX="100"  # requests per window
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds

# Logging Configuration
LOG_LEVEL="info"  # debug, info, warn, error

# Performance & Monitoring
ENABLE_CACHE="true"
CACHE_TTL="300000"  # 5 minutes in milliseconds
ENABLE_PERFORMANCE_MONITORING="true"

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"
SESSION_MAX_AGE="86400"  # 24 hours in seconds

# Production optimizations
NODE_ENV="development"  # development, production
OPTIMIZE_IMAGES="true"
COMPRESS_RESPONSES="true"

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Admin Setup
ADMIN_SETUP_KEY="your-admin-setup-key-here"

# Environment
NODE_ENV="development"

# Domain Configuration
DOMAIN="codesolutionstudio.com.mx"
APP_URL="https://codesolutionstudio.com.mx"

# Optional: Custom SMTP for additional email services
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
